module hosts {
  namespace "aug:hosts";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  container hosts {
    list record {
      key "_id";
      augex:data-path "$$_id";
      leaf _id {
        type uint64;
      }
      leaf ipaddr {
        type string {
          pattern "[^# \n\t]+";
        }
        augex:data-path "$$_id/ipaddr";
      }
      leaf canonical {
        type string {
          pattern "[^# \n\t]+";
        }
        augex:data-path "$$_id/canonical";
      }
      leaf-list alias {
        type string {
          pattern "[^# \n\t]+";
        }
        augex:data-path "$$_id/alias";
      }
    }
  }
}