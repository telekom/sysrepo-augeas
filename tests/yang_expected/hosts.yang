module hosts {
  namespace "aug:hosts";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Hosts";

  list hosts {
    key "config-file";
    leaf config-file {
      type string;
    }
    list record {
      key "_id";
      augex:data-path "$$_id";
      leaf _id {
        type uint64;
      }
      leaf ipaddr {
        mandatory true;
        type string {
          pattern "[^# \n\t]+";
        }
        augex:data-path "$$_id/ipaddr";
      }
      leaf canonical {
        mandatory true;
        type string {
          pattern "[^# \n\t]+";
        }
        augex:data-path "$$_id/canonical";
      }
      leaf-list alias {
        type string {
          pattern "[^# \n\t]+";
        }
        augex:data-path "$$_id/alias";
      }
    }
  }
}