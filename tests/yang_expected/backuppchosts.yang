module backuppchosts {
  namespace "aug:backuppchosts";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "BackupPCHosts";

  container backuppchosts {
    list record {
      key "_id";
      augex:data-path "$$_id";
      leaf _id {
        type uint64;
      }
      leaf host {
        mandatory true;
        type string {
          pattern "[^#, \n\t/]+";
        }
        augex:data-path "$$_id/host";
      }
      leaf dhcp {
        mandatory true;
        type string {
          pattern "[^#, \n\t/]+";
        }
        augex:data-path "$$_id/dhcp";
      }
      leaf user {
        mandatory true;
        type string {
          pattern "[^#, \n\t/]+";
        }
        augex:data-path "$$_id/user";
      }
      leaf-list moreusers {
        type string {
          pattern "[^#, \n\t/]+";
        }
        augex:data-path "$$_id/moreusers";
      }
    }
  }
}