module inittab {
  namespace "aug:inittab";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Inittab";

  list inittab {
    key "config-file";
    leaf config-file {
      type string;
    }
    list record {
      key "id";
      augex:data-path "$$id";
      leaf id {
        type string {
          pattern "[^/#:\n]{1,4}";
        }
      }
      leaf runlevels {
        mandatory true;
        type string {
          pattern "[^#:\n]*";
        }
        augex:data-path "$$id/runlevels";
      }
      leaf action {
        mandatory true;
        type string {
          pattern "[^#:\n]*";
        }
        augex:data-path "$$id/action";
      }
      leaf process {
        mandatory true;
        type string {
          pattern "[^#\n]*";
        }
        augex:data-path "$$id/process";
      }
    }
  }
}