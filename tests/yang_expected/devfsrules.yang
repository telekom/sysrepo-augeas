module devfsrules {
  namespace "aug:devfsrules";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  container devfsrules {
    list record {
      key "key";
      augex:data-path "$key";
      leaf key {
        type string {
          pattern "[A-Za-z0-9_.-]+";
        }
      }
      leaf id {
        type string {
          pattern "[0-9]+";
        }
        augex:data-path "$key/id";
      }
      list entry {
        key "key";
        augex:data-path "$key/$key";
        leaf key {
          type uint64;
        }
        leaf line_re {
          type string {
            pattern "[^][#; \t\n][^#;\n]*[^#; \t\n]";
          }
          augex:data-path "$key/^key";
        }
      }
    }
  }
}