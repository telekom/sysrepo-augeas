module grubenv {
  namespace "aug:grubenv";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "GrubEnv";

  container grubenv {
    list record {
      key "_id";
      augex:data-path "$$_id";
      leaf _id {
        type uint64;
      }
      leaf name {
        mandatory true;
        type string {
          pattern "[A-Za-z_][A-Za-z0-9_]*";
        }
        augex:data-path "$$_id/name";
      }
      leaf value {
        mandatory true;
        type string {
          pattern "[^\\\n]*(\\\\(\\\\|\n)[^\\\n]*)*";
        }
        augex:data-path "$$_id/value";
      }
    }
  }
}