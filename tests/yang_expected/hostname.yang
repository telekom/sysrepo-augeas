module hostname {
  namespace "aug:hostname";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Hostname";

  container hostname {
    leaf hostname {
      mandatory true;
      type string {
        pattern "[A-Za-z0-9_.-]+";
      }
      augex:data-path "hostname";
    }
  }
}