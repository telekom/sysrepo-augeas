module simplelines {
  namespace "aug:simplelines";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Simplelines";

  container simplelines {
    list files {
      key "file";
      leaf file {
        type string;
      }
      leaf-list line {
        type string {
          pattern "[^# \t\n].*[^ \t\n]|[^# \t\n]";
        }
        augex:data-path "$AY_UINT";
      }
    }
  }
}