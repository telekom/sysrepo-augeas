module simplelines {
  namespace "aug:simplelines";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Simplelines";

  list simplelines {
    key "config-file";
    leaf config-file {
      type string;
    }
    leaf-list line {
      type string {
        pattern "[^# \t\n].*[^ \t\n]|[^# \t\n]";
      }
      augex:data-path "$AY_UINT";
    }
  }
}