module login_defs {
  namespace "aug:login_defs";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  container login_defs {
    list record {
      key "_id";
      augex:data-path "$$_id";
      leaf _id {
        type string {
          pattern "[A-Za-z0-9_.-]+";
        }
      }
      leaf node {
        type string {
          pattern "[^ \t\n]+([ \t]+[^ \t\n]+)*";
        }
        augex:data-path "^^_id";
      }
    }
  }
}