module securetty {
  namespace "aug:securetty";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  container securetty {
    list record {
      key "key";
      augex:data-path "$key";
      leaf key {
        type uint64;
      }
      leaf word {
        type string {
          pattern "[^ \t\n#]+";
        }
        augex:data-path "^key";
      }
    }
  }
}