module securetty {
  namespace "aug:securetty";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Securetty";

  container securetty {
    list files {
      key "file";
      leaf file {
        type string;
      }
      list record {
        key "_id";
        augex:data-path "$$_id";
        leaf _id {
          type uint64;
        }
        leaf word {
          mandatory true;
          type string {
            pattern "[^ \t\n#]+";
          }
          augex:data-path "^^_id";
        }
      }
    }
  }
}