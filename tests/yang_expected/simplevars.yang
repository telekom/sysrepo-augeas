module simplevars {
  namespace "aug:simplevars";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Simplevars";

  list simplevars {
    key "config-file";
    leaf config-file {
      type string;
    }
    list entry {
      key "_id";
      augex:data-path "$$_id";
      leaf _id {
        type string {
          pattern "[A-Za-z0-9_.-]+";
        }
      }
      leaf to_comment_re {
        type union {
          type string {
            pattern "(('[^\n']*')|(\"[^\n\"]*\"))|([^\n \t'\"#][^\n#]*[^\n \t#]|[^\n \t'\"#])";
          }
          type string {
            pattern "";
          }
        }
        augex:data-path "^^_id";
      }
    }
  }
}