module device_map {
  namespace "aug:device_map";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  container device_map {
    list map {
      key "_id";
      augex:data-path "$_id";
      leaf _id {
        type string {
          pattern "(((h|f|c)d[0-9]+(,[0-9a-zA-Z]+){0,2})|(0x[0-9a-fA-F]+))|([0-9]+)";
        }
      }
      leaf fspath {
        type string {
          pattern "[^ \t\n]+";
        }
        augex:data-path "^_id";
      }
    }
  }
}