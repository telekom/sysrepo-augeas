module ethers {
  namespace "aug:ethers";
  prefix aug;

  import augeas-extension {
    prefix augex;
  }

  augex:augeas-mod-name "Ethers";

  container ethers {
    list files {
      key "file";
      leaf file {
        type string;
      }
      list record {
        key "_id";
        augex:data-path "$$_id";
        leaf _id {
          type uint64;
        }
        leaf mac {
          mandatory true;
          type string {
            pattern "(((((((((([0-9a-fA-F][0-9a-fA-F]?)(:))([0-9a-fA-F][0-9a-fA-F]?))(:))([0-9a-fA-F][0-9a-fA-F]?))(:))([0-9a-fA-F][0-9a-fA-F]?))(:))([0-9a-fA-F][0-9a-fA-F]?))(:))([0-9a-fA-F][0-9a-fA-F]?)";
          }
          augex:data-path "$$_id/mac";
        }
        leaf ip {
          mandatory true;
          type string {
            pattern "[^# \n\t]+";
          }
          augex:data-path "$$_id/ip";
        }
      }
    }
  }
}